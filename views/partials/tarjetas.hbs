{{#if productos}}
    {{#each productos}}
        {{#esMayor this.stock 0}}
            <div class="tarjeta bg-white sombra rounded m-2">
                <div title="Ver" style="cursor: pointer;" class="abrir-detalle" id="d{{this._id}}">
                    <img class="card-img w-100" src="{{this.imagen}}" onerror="this.onerror=null; this.src='./assets/img/tarjeta-alternativa.jpg';">
                    <div class="titulo-tarjeta ps-2 pe-2">
                        <h4 class="text-center">{{this.tipo}} {{this.banda}} #{{this.modelo}}</h4>
                    </div>
                </div>
                <h3 class="text-info text-center">${{this.precio}}</h3>
                <div class="hstack mb-2" style="justify-content: center;">
                    <div class="hstack pe-2">
                        <label for="cantidad" class="form-label pe-2 pt-1">Cantidad:</label>
                        <select name="cantidad" id="cantidad-{{this._id}}" class="form-select me-2" style="width: 60px;">
                            <option value="1">1</option>
                            {{#esMayor this.stock 1}} <option value="2">2</option> {{/esMayor}}
                            {{#esMayor this.stock 2}} <option value="3">3</option> {{/esMayor}}
                            {{#esMayor this.stock 3}} <option value="4">4</option> {{/esMayor}}
                            {{#esMayor this.stock 4}} <option value="5">5</option> {{/esMayor}}
                        </select>
                    </div>
                    <button id="{{this._id}}" class="agregar btn btn-dark" title="Agregar al carrito">Agregar <i class="fa-solid fa-cart-plus"></i></button>
                </div>
            </div>
        {{/esMayor}}
    {{/each}}
{{else}}
    <h1 class="text-white text-center">
        No hay productos para mostrar
    </h1>
{{/if}}