<div class="m-0 p-0" style="background-color: #957d96;" id="panel-administrador">
    {{> headerAdmin}}
    <main>
        <div class="container-md d-flex flex-column" style="max-width: 900px;">
            <h1 class="text-white text-center">
                Panel de administrador
            </h1>
            <div class="d-md-flex flex-row">
                <button class="btn btn-dark"><a href="alta">Ingresar producto +</a></button>
                <button class="btn btn-dark"><a href="mensajes">Ver mensajes</a></button>
                <form class="hstack">
                    <input class="form-control" type="search" placeholder="Buscar productos">
                    <button class="btn btn-dark ms-2" type="submit">Buscar</button>
                </form>
            </div>
            <div id="tabla-administrador" class="p-0 mb-5 mt-2" style="border-radius: 6px; overflow: hidden">
                <table class="table table-dark table-striped table-responsive text-center m-0">
                    <thead>
                        <tr>
                            <th>tipo</th>
                            <th>banda / modelo</th>
                            <th>precio</th>
                            <th>stock</th>
                            <th>-</th>
                        </tr>
                    </thead>
                    {{#if productos}}
                    {{#each productos}}
                    <tr>
                        <td>{{this.tipo}}</td>
                        <td class="hoveru">{{this.banda}} / #{{this.modelo}}</td>
                        <td>{{this.precio}} <i class="editar fa-solid fa-pencil pointer" title="modificar"></i></td>
                        <td>{{this.stock}}<span class="pointer" title="agregar"> + </span></td>
                        <td><i class="eliminar fa-solid fa-trash pointer" title="eliminar"></i></td>
                    </tr>
                    {{/each}}
                    {{/if}}
                </table>

            </div>
        </div>
    </main>
</div>
