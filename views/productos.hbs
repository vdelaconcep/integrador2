<div class="productos mb-0" style="background-color: #FEC224;" id="pagina-productos">
    {{> header}}
    <main>
        
        <h1 class="text-white text-center">
            {{#esIgual tipoProducto "Productos"}}
                Todos los productos
            {{else}}
                {{tipoProducto}}
            {{/esIgual}}
        </h1>

        <div class="tarjetas d-flex flex-wrap" style="justify-content: center;" id="div-tarjetas">
            {{> tarjetas}}
        </div>
        <div class="overlay">
            <div id="div-verProducto" class="text-center">
                {{> detalle}}
                <button class="vaciar btn btn-danger mt-3 mb-3" style="width: 110px;"
                    title="Quitar del carrito">Cancelar <i class="fa-solid fa-xmark"></i></button>
            </div>
        </div>
    </main>
</div>